{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Start Backend Server",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "src.server:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--log-level",
        "debug"
      ],
      "cwd": "${workspaceFolder}/backend",
      "envFile": "${workspaceFolder}/backend/.env",
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Python: Start MCP Server",
      "type": "python",
      "request": "launch",
      "module": "src.mcp",
      "cwd": "${workspaceFolder}/backend",
      "envFile": "${workspaceFolder}/backend/.env",
      "console": "externalTerminal",
      "justMyCode": false
    },
    {
      "name": "Python: Debug Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "envFile": "${workspaceFolder}/backend/.env"
    },
    {
      "name": "Python: Debug Tests",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-vv",
        "-s",
        "--tb=short",
        "--no-cov",
        "-n",
        "0",
        "${file}"
      ],
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Python: Debug Unit Tests Only",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "tests/unit",
        "-vv",
        "-s",
        "--tb=short",
        "--no-cov",
        "-n",
        "0"
      ],
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Python: Debug Integration Tests",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "tests/integration",
        "-vv",
        "-s",
        "--tb=short",
        "-n",
        "0"
      ],
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Node: Start Frontend Dev Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/frontend",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Python: Backend (Production Simulation)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "src.server:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--log-level",
        "info"
      ],
      "cwd": "${workspaceFolder}/backend",
      "envFile": "${workspaceFolder}/.env.production",
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Python: Debug Current Test File",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${file}",
        "-vv",
        "-s",
        "--tb=short",
        "--no-cov",
        "-n",
        "0",
        "-k",
        "${input:testName}"
      ],
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Browser: Debug Frontend (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/frontend/src",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/*"
      }
    },
    {
      "name": "Python: Attach to Running Server",
      "type": "python",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/backend",
          "remoteRoot": "."
        }
      ]
    },
    {
      "name": "Python: Attach to Docker Backend",
      "type": "python",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/backend/src",
          "remoteRoot": "/app/backend/src"
        }
      ],
      "justMyCode": false
    },
    {
      "name": "Python: Run Specific Test",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-vv",
        "-s",
        "--tb=long",
        "--no-cov",
        "-n",
        "0",
        "-k",
        "${input:testPattern}"
      ],
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ],
  "compounds": [
    {
      "name": "Full Stack Debug",
      "configurations": [
        "Python: Start Backend Server",
        "Node: Start Frontend Dev Server"
      ],
      "presentation": {
        "hidden": false,
        "group": "debug",
        "order": 1
      },
      "stopAll": true
    },
    {
      "name": "Debug All Tests",
      "configurations": [
        "Python: Debug Unit Tests Only",
        "Python: Debug Integration Tests"
      ],
      "presentation": {
        "hidden": false,
        "group": "test",
        "order": 2
      },
      "stopAll": true
    }
  ],
  "inputs": [
    {
      "id": "testName",
      "type": "promptString",
      "description": "Test name pattern to run (e.g., test_create_shipment)",
      "default": ""
    },
    {
      "id": "testPattern",
      "type": "promptString",
      "description": "Test pattern to match (pytest -k syntax)",
      "default": ""
    }
  ]
}
