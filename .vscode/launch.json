{
  // VS Code Debug Configuration
  // Schema provides IntelliSense, validation, and hover descriptions
  "$schema": "https://raw.githubusercontent.com/microsoft/vscode/main/src/schemas/json/launch.schema.json",
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Backend Server (Test)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "src.server:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--log-level",
        "debug"
      ],
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "ENVIRONMENT": "test"
      }
    },
    {
      "name": "Python: Backend Server (Production)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "src.server:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--log-level",
        "info"
      ],
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "ENVIRONMENT": "production"
      }
    },
    {
      "name": "Python: MCP Server (Test)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/python/run_mcp.py",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "ENVIRONMENT": "test",
        "MCP_DEBUG": "true"
      },
      "presentation": {
        "order": 1,
        "group": "MCP"
      }
    },
    {
      "name": "Python: MCP Server (Production)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/python/run_mcp.py",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "ENVIRONMENT": "production",
        "MCP_DEBUG": "true"
      },
      "presentation": {
        "order": 2,
        "group": "MCP"
      }
    },
    {
      "name": "Python: Debug Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: Debug Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-vv", "-s", "--tb=short", "--no-cov", "-n", "0", "${file}"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: Debug Unit Tests Only",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["tests/unit", "-vv", "-s", "--tb=short", "--no-cov", "-n", "0"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Debug Integration Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["tests/integration", "-vv", "-s", "--tb=short", "-n", "0"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Backend (Production Simulation)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "src.server:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--log-level",
        "info"
      ],
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "ENVIRONMENT": "production"
      }
    },
    {
      "name": "Python: Debug Current Test File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${file}",
        "-vv",
        "-s",
        "--tb=short",
        "--no-cov",
        "-n",
        "0",
        "-k",
        "${input:testName}"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Attach to Running Server",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "."
        }
      ]
    },
    {
      "name": "Python: Attach to Docker Backend",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/src",
          "remoteRoot": "/app/src"
        }
      ],
      "justMyCode": false
    },
    {
      "name": "Python: Run Specific Test",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-vv",
        "-s",
        "--tb=long",
        "--no-cov",
        "-n",
        "0",
        "-k",
        "${input:testPattern}"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Debug MCP Tool CLI",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/python/mcp_tool.py",
      "args": ["${input:toolName}", "${input:toolArgs}"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Python: Run Performance Benchmarks",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "tests/integration/test_bulk_performance.py",
        "-v",
        "-s",
        "--no-cov"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ],
  "compounds": [
    {
      "name": "Debug All Tests",
      "configurations": [
        "Python: Debug Unit Tests Only",
        "Python: Debug Integration Tests"
      ],
      "presentation": {
        "hidden": false,
        "group": "test",
        "order": 1
      },
      "stopAll": true
    },
    {
      "name": "MCP Server Only (Test)",
      "configurations": ["Python: MCP Server (Test)"],
      "presentation": {
        "hidden": false,
        "group": "MCP",
        "order": 1
      }
    },
    {
      "name": "MCP Server Only (Production)",
      "configurations": ["Python: MCP Server (Production)"],
      "presentation": {
        "hidden": false,
        "group": "MCP",
        "order": 2
      }
    }
  ],
  "inputs": [
    {
      "id": "testName",
      "type": "promptString",
      "description": "Test name pattern to run (e.g., test_create_shipment)",
      "default": ""
    },
    {
      "id": "testPattern",
      "type": "promptString",
      "description": "Test pattern to match (pytest -k syntax)",
      "default": ""
    },
    {
      "id": "toolName",
      "type": "promptString",
      "description": "MCP tool name (e.g., get_tracking, create_shipment)",
      "default": "get_tracking"
    },
    {
      "id": "toolArgs",
      "type": "promptString",
      "description": "Tool arguments (JSON or positional)",
      "default": ""
    }
  ]
}
