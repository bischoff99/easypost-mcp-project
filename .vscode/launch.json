{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Start Backend Server",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "src.server:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--log-level",
        "debug"
      ],
      "cwd": "${workspaceFolder}/apps/backend",
      "envFile": "${workspaceFolder}/apps/backend/.env",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Start MCP Server",
      "type": "debugpy",
      "request": "launch",
      "module": "src.mcp_server.server",
      "cwd": "${workspaceFolder}/apps/backend",
      "envFile": "${workspaceFolder}/apps/backend/.env",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Debug Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/apps/backend/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/apps/backend"
      }
    },
    {
      "name": "Python: Debug Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-vv", "-s", "--tb=short", "--no-cov", "-n", "0", "${file}"],
      "cwd": "${workspaceFolder}/apps/backend",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/apps/backend"
      }
    },
    {
      "name": "Python: Debug Unit Tests Only",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["tests/unit", "-vv", "-s", "--tb=short", "--no-cov", "-n", "0"],
      "cwd": "${workspaceFolder}/apps/backend",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Debug Integration Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["tests/integration", "-vv", "-s", "--tb=short", "-n", "0"],
      "cwd": "${workspaceFolder}/apps/backend",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Node: Start Frontend Dev Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/apps/frontend",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Python: Backend (Production Simulation)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["src.server:app", "--host", "0.0.0.0", "--port", "8000", "--log-level", "info"],
      "cwd": "${workspaceFolder}/apps/backend",
      "envFile": "${workspaceFolder}/apps/backend/.env",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "ENVIRONMENT": "production"
      }
    },
    {
      "name": "Python: Debug Current Test File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${file}",
        "-vv",
        "-s",
        "--tb=short",
        "--no-cov",
        "-n",
        "0",
        "-k",
        "${input:testName}"
      ],
      "cwd": "${workspaceFolder}/apps/backend",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Browser: Debug Frontend (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/apps/frontend/src",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "/@fs/*": "${webRoot}/*",
        "/@id/*": "${webRoot}/*",
        "/src/*": "${webRoot}/*"
      }
    },
    {
      "name": "Python: Attach to Running Server",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/apps/backend",
          "remoteRoot": "."
        }
      ]
    },
    {
      "name": "Python: Attach to Docker Backend",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/apps/backend/src",
          "remoteRoot": "/app/backend/src"
        }
      ],
      "justMyCode": false
    },
    {
      "name": "Python: Run Specific Test",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-vv", "-s", "--tb=long", "--no-cov", "-n", "0", "-k", "${input:testPattern}"],
      "cwd": "${workspaceFolder}/apps/backend",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ],
  "compounds": [
    {
      "name": "Full Stack Debug",
      "configurations": ["Python: Start Backend Server", "Node: Start Frontend Dev Server"],
      "presentation": {
        "hidden": false,
        "group": "debug",
        "order": 1
      },
      "stopAll": true
    },
    {
      "name": "Debug All Tests",
      "configurations": ["Python: Debug Unit Tests Only", "Python: Debug Integration Tests"],
      "presentation": {
        "hidden": false,
        "group": "test",
        "order": 2
      },
      "stopAll": true
    }
  ],
  "inputs": [
    {
      "id": "testName",
      "type": "promptString",
      "description": "Test name pattern to run (e.g., test_create_shipment)",
      "default": ""
    },
    {
      "id": "testPattern",
      "type": "promptString",
      "description": "Test pattern to match (pytest -k syntax)",
      "default": ""
    }
  ]
}
