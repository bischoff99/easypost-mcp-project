{
  // VS Code Workspace Settings
  // Schema provides IntelliSense, validation, and hover descriptions
  // Note: Schema is auto-detected by VS Code, but explicit reference helps with offline mode
  "$schema": "https://raw.githubusercontent.com/microsoft/vscode/main/src/schemas/json/settings.schema.json",
  // ===== Editor Core Settings =====
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.rulers": [100],
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,

  // ===== File Management =====
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/node_modules": true,
    "**/.venv": true,
    "**/venv": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true,
    "**/dist": true,
    "**/build": true,
    "**/*.egg-info": true,
    "**/htmlcov": true,
    "**/coverage": true,
    "**/.DS_Store": true
  },
  "files.watcherExclude": {
    "**/__pycache__/**": true,
    "**/.venv/**": true,
    "**/venv/**": true,
    "**/node_modules/**": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.pytest_cache/**": true,
    "**/.mypy_cache/**": true,
    "**/.ruff_cache/**": true,
    "**/htmlcov/**": true,
    "**/coverage/**": true,
    "**/*.egg-info/**": true,
    "**/.DS_Store": true
  },

  // ===== Search Configuration =====
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.venv": true,
    "**/venv": true,
    "**/__pycache__": true,
    "**/htmlcov": true,
    "**/coverage": true,
    "pnpm-lock.yaml": true
  },

  // ===== Python Configuration =====
  "python.analysis.typeCheckingMode": "strict",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.inlayHints.callArgumentTypes": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.indexing": true,
  "python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python",
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": ["tests"],
  "python.testing.cwd": "${workspaceFolder}",
  "python.linting.enabled": true,
  "python.linting.ruffEnabled": true,
  "python.linting.mypyEnabled": true,
  "python.linting.mypyArgs": [
    "--strict",
    "--ignore-missing-imports",
    "--warn-unused-ignores"
  ],

  // ===== Language-Specific Formatting =====
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.rulers": [100],
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit",
      "source.organizeImports.ruff": "explicit"
    }
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.rulers": [100]
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.rulers": [100]
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.rulers": [100]
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.rulers": [100]
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[markdown]": {
    "editor.wordWrap": "on"
  },

  // ===== Prettier Configuration =====
  "prettier.configPath": ".prettierrc",
  "prettier.enableDebugLogs": false, // Set to false to reduce INFO messages in Output panel

  // ===== Security Settings =====
  // CRITICAL: Workspace trust enabled for MCP and credential safety
  "security.workspace.trust.enabled": true,
  "security.workspace.trust.untrustedFiles": "open",
  "security.workspace.trust.banner": "always",

  // ===== ESLint Configuration =====
  "eslint.workingDirectories": ["${workspaceFolder}"],

  // ===== Markdown Configuration =====
  "markdown.validate.enabled": true,

  // ===== JSON Schema Validation =====
  "json.schemas": [
    {
      "fileMatch": ["**/mcp.json"],
      "url": "https://raw.githubusercontent.com/anthropics/anthropic-sdk-python/main/etc/schemas/mcp.schema.json",
      "description": "MCP Server Configuration Schema"
    }
  ],

  // ===== Performance Settings (Apple Silicon) =====
  "files.maxMemoryForLargeFilesMB": 32768,
  "search.maxResults": 100000,
  "terminal.integrated.gpuAcceleration": "on",
  "workbench.editor.enablePreview": false,

  // ===== Cursor-Specific Settings =====
  "cursor.general.enableShadowWorkspace": true,
  "cursor.cpp.disabledLanguages": [],
  "cursor.chat.enabled": true,
  "cursorpyright.analysis.autoImportCompletions": true,
  "cursorpyright.analysis.diagnosticMode": "workspace",
  "cursorpyright.analysis.inlayHints.functionReturnTypes": true,
  "cursorpyright.analysis.inlayHints.variableTypes": true,
  "cursorpyright.analysis.inlayHints.callArgumentTypes": true,
  "cursorpyright.analysis.typeCheckingMode": "strict"
}
