{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "üöÄ Dev: Full Stack",
      "dependsOn": [
        "Dev: Backend",
        "Dev: Frontend"
      ],
      "dependsOrder": "parallel",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Dev: Backend",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "uvicorn",
        "src.server:app",
        "--reload",
        "--port",
        "${input:backendPort}"
      ],
      "options": {
        "cwd": "${workspaceFolder}/apps/backend",
        "env": {
          "PYTHONPATH": "${workspaceFolder}/apps/backend",
          "ENVIRONMENT": "development"
        }
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "python",
        "source": "uvicorn",
        "pattern": {
          "regexp": "^(.+):(\\d+):(\\d+): (\\w+): (.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Uvicorn running.*$",
          "endsPattern": "^.*Application startup complete.*$"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev-servers",
        "echo": true
      }
    },
    {
      "label": "Dev: Frontend",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "dev"
      ],
      "options": {
        "cwd": "${workspaceFolder}/apps/frontend"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "vite",
        "source": "vite",
        "pattern": {
          "regexp": "^(.+):(\\d+):(\\d+): (error|warning): (.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*VITE.*$",
          "endsPattern": "^.*ready in.*$"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev-servers",
        "echo": true
      }
    },
    {
      "label": "üß™ Test: Backend",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "pytest",
        "tests/",
        "-v"
      ],
      "options": {
        "cwd": "${workspaceFolder}/apps/backend",
        "env": {
          "PYTHONPATH": "${workspaceFolder}/apps/backend"
        }
      },
      "problemMatcher": "$python",
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "üß™ Test: Frontend",
      "type": "shell",
      "command": "npm",
      "args": [
        "test"
      ],
      "options": {
        "cwd": "${workspaceFolder}/apps/frontend"
      },
      "problemMatcher": [
        "$eslint-stylish"
      ],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "üé® Lint: Backend",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "ruff",
        "check",
        "src/",
        "tests/"
      ],
      "options": {
        "cwd": "${workspaceFolder}/apps/backend"
      },
      "problemMatcher": {
        "owner": "ruff",
        "source": "ruff",
        "pattern": {
          "regexp": "^(.+):(\\d+):(\\d+): (\\w+): (.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "code": 4,
          "message": 5
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "üé® Lint: Frontend",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "lint"
      ],
      "options": {
        "cwd": "${workspaceFolder}/apps/frontend"
      },
      "problemMatcher": [
        "$eslint-stylish"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "‚ú® Format: Backend",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "ruff",
        "format",
        "src/",
        "tests/"
      ],
      "options": {
        "cwd": "${workspaceFolder}/apps/backend"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "‚ú® Format: Frontend",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "format"
      ],
      "options": {
        "cwd": "${workspaceFolder}/apps/frontend"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "üèóÔ∏è Build: Frontend",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "build"
      ],
      "options": {
        "cwd": "${workspaceFolder}/apps/frontend"
      },
      "problemMatcher": [
        "$eslint-stylish"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "‚úÖ Pre-Commit: Run All Checks",
      "dependsOn": [
        "‚ú® Format: Backend",
        "‚ú® Format: Frontend",
        "üé® Lint: Backend",
        "üé® Lint: Frontend",
        "üß™ Test: Backend"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "üóÑÔ∏è Database: Create Migration",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "alembic", "revision", "--autogenerate", "-m", "${input:migrationMessage}"],
      "options": {
        "cwd": "${workspaceFolder}/apps/backend"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ],
  "inputs": [
    {
      "id": "backendPort",
      "type": "promptString",
      "description": "Backend server port",
      "default": "8000"
    },
    {
      "id": "migrationMessage",
      "type": "promptString",
      "description": "Migration message",
      "default": "auto migration"
    }
  ]
}
