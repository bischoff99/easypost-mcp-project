{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "üöÄ Dev: Full Stack",
      "dependsOn": [
        "Dev: Backend",
        "Dev: Frontend"
      ],
      "dependsOrder": "parallel",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Dev: Backend",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "uvicorn",
        "src.server:app",
        "--reload",
        "--port",
        "${input:backendPort}"
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend",
        "env": {
          "PYTHONPATH": "${workspaceFolder}/backend",
          "ENVIRONMENT": "development"
        }
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "python",
        "source": "uvicorn",
        "pattern": {
          "regexp": "^(.+):(\\d+):(\\d+): (\\w+): (.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Uvicorn running.*$",
          "endsPattern": "^.*Application startup complete.*$"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev-servers",
        "echo": true
      }
    },
    {
      "label": "Dev: Frontend",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "dev"
      ],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "vite",
        "source": "vite",
        "pattern": {
          "regexp": "^(.+):(\\d+):(\\d+): (error|warning): (.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*VITE.*$",
          "endsPattern": "^.*ready in.*$"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev-servers",
        "echo": true
      }
    },
    {
      "label": "üè≠ Prod: Backend",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "uvicorn",
        "src.server:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000"
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend",
        "env": {
          "PYTHONPATH": "${workspaceFolder}/backend",
          "ENVIRONMENT": "production"
        }
      },
      "problemMatcher": "$python",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "üß™ Test: Backend",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "pytest",
        "tests/",
        "-v"
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend",
        "env": {
          "PYTHONPATH": "${workspaceFolder}/backend"
        }
      },
      "problemMatcher": "$python",
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "üß™ Test: Frontend",
      "type": "shell",
      "command": "npm",
      "args": [
        "test"
      ],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": [
        "$eslint-stylish"
      ],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "üß™ Test: Watch Backend",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "pytest",
        "tests/",
        "-v",
        "--tb=short",
        "-f"
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend",
        "env": {
          "PYTHONPATH": "${workspaceFolder}/backend"
        }
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "pytest",
        "source": "pytest",
        "pattern": {
          "regexp": "^(.+):(\\d+): (.+)$",
          "file": 1,
          "line": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*test session starts.*$",
          "endsPattern": "^.*passed.*$"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "üé® Lint: Backend",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "ruff",
        "check",
        "src/",
        "tests/"
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": {
        "owner": "ruff",
        "source": "ruff",
        "pattern": {
          "regexp": "^(.+):(\\d+):(\\d+): (\\w+): (.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "code": 4,
          "message": 5
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "üé® Lint: Frontend",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "lint"
      ],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": [
        "$eslint-stylish"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "‚ú® Format: Backend",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "ruff",
        "format",
        "src/",
        "tests/"
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "‚ú® Format: Frontend",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "format"
      ],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "üì¶ Install: Backend Dependencies",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "pip",
        "install",
        "-r",
        "requirements.txt"
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "üì¶ Install: Frontend Dependencies",
      "type": "shell",
      "command": "npm",
      "args": [
        "install"
      ],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "üì¶ Install: All Dependencies",
      "dependsOn": [
        "üì¶ Install: Backend Dependencies",
        "üì¶ Install: Frontend Dependencies"
      ],
      "dependsOrder": "parallel",
      "problemMatcher": []
    },
    {
      "label": "üèóÔ∏è Build: Frontend",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "build"
      ],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": [
        "$eslint-stylish"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "üßπ Clean: All",
      "type": "shell",
      "command": "rm -rf backend/**/__pycache__ backend/.pytest_cache frontend/node_modules frontend/dist",
      "windows": {
        "command": "powershell -Command \"Remove-Item -Recurse -Force backend/**/__pycache__, backend/.pytest_cache, frontend/node_modules, frontend/dist -ErrorAction SilentlyContinue\""
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "üê≥ Docker: Build",
      "type": "shell",
      "command": "docker",
      "args": [
        "compose",
        "build",
        "--parallel"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "üê≥ Docker: Start",
      "type": "shell",
      "command": "docker",
      "args": [
        "compose",
        "up",
        "-d"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "üê≥ Docker: Stop",
      "type": "shell",
      "command": "docker",
      "args": [
        "compose",
        "down"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "üê≥ Docker: Full Stack",
      "dependsOn": [
        "üê≥ Docker: Build",
        "üê≥ Docker: Start"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "backendPort",
      "type": "promptString",
      "description": "Backend server port",
      "default": "8000"
    },
    {
      "id": "frontendPort",
      "type": "promptString",
      "description": "Frontend server port",
      "default": "5173"
    },
    {
      "id": "environment",
      "type": "pickString",
      "description": "Select environment",
      "options": [
        "development",
        "staging",
        "production"
      ],
      "default": "development"
    }
  ]
}
