{
  "$schema": "https://raw.githubusercontent.com/microsoft/vscode/main/src/vs/workbench/contrib/tasks/common/tasks.json.schema.json",
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dev: Backend",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "uvicorn",
        "src.server:app",
        "--reload",
        "--port",
        "${input:backendPort}"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PYTHONPATH": "${workspaceFolder}/src",
          "ENVIRONMENT": "development"
        }
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "python",
        "source": "uvicorn",
        "pattern": {
          "regexp": "^(.+):(\\d+):(\\d+): (\\w+): (.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Uvicorn running.*",
          "endsPattern": ".*Application startup complete.*"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev-servers",
        "echo": true
      }
    },
    {
      "label": "ðŸ§ª Test: Backend",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "pytest", "tests/", "-v", "-n", "auto"],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PYTHONPATH": "${workspaceFolder}/src"
        }
      },
      "problemMatcher": "$python",
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "âœ… Pre-Commit: Run All Checks",
      "type": "shell",
      "command": "make",
      "args": ["check"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ],
  "inputs": [
    {
      "id": "backendPort",
      "type": "promptString",
      "description": "Backend server port",
      "default": "8000"
    }
  ]
}
