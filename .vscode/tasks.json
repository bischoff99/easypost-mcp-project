{
  // VS Code Tasks Configuration
  // Supports JSON with Comments (jsonc) mode for documentation
  // Schema provides IntelliSense, validation, and hover descriptions
  "$schema": "https://raw.githubusercontent.com/microsoft/vscode/main/src/vs/workbench/contrib/tasks/common/tasks.json.schema.json",
  "version": "2.0.0",
  "tasks": [
    {
      // Compound task: Starts both backend and frontend servers in parallel
      // Uses background tasks with problem matchers for error detection
      "label": "üöÄ Dev: Full Stack",
      "dependsOn": [
        "Dev: Backend",
        "Dev: Frontend"
      ],
      "dependsOrder": "parallel",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Dev: Backend",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "uvicorn",
        "src.server:app",
        "--reload",
        "--port",
        "${input:backendPort}"
      ],
      "options": {
        "cwd": "${workspaceFolder}/apps/backend",
        "env": {
          "PYTHONPATH": "${workspaceFolder}/apps/backend",
          "ENVIRONMENT": "development"
        }
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "python",
        "source": "uvicorn",
        // Regex pattern matches: file:line:column: severity: message
        // Example: "src/server.py:42:5: error: Undefined variable"
        "pattern": {
          "regexp": "^(.+):(\\d+):(\\d+): (\\w+): (.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          // Wait for uvicorn startup message before marking task as ready
          "beginsPattern": "^.*Uvicorn running.*$",
          "endsPattern": "^.*Application startup complete.*$"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev-servers",
        "echo": true
      }
    },
    {
      "label": "Dev: Frontend",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "dev"
      ],
      "options": {
        "cwd": "${workspaceFolder}/apps/frontend"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "vite",
        "source": "vite",
        // Regex pattern matches: file:line:column: error|warning: message
        // Example: "src/App.jsx:15:3: error: Unexpected token"
        "pattern": {
          "regexp": "^(.+):(\\d+):(\\d+): (error|warning): (.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          // Wait for Vite startup message before marking task as ready
          "beginsPattern": "^.*VITE.*$",
          "endsPattern": "^.*ready in.*$"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev-servers",
        "echo": true
      }
    },
    {
      "label": "üß™ Test: Backend",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "pytest",
        "tests/",
        "-v",
        "-n",
        "auto"
      ],
      "options": {
        "cwd": "${workspaceFolder}/apps/backend",
        "env": {
          "PYTHONPATH": "${workspaceFolder}/apps/backend"
        }
      },
      "problemMatcher": "$python",
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "üß™ Test: Frontend",
      "type": "shell",
      "command": "npm",
      "args": [
        "test"
      ],
      "options": {
        "cwd": "${workspaceFolder}/apps/frontend"
      },
      "problemMatcher": [
        "$eslint-stylish"
      ],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "üèóÔ∏è Build: Frontend",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "build"
      ],
      "options": {
        "cwd": "${workspaceFolder}/apps/frontend"
      },
      "problemMatcher": [
        "$eslint-stylish"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      // Pre-commit workflow: Runs format, lint, and test via Makefile
      // Use before committing code to ensure quality
      // Note: Uses Makefile commands for consistency (lint/format tasks removed to reduce redundancy)
      "label": "‚úÖ Pre-Commit: Run All Checks",
      "type": "shell",
      "command": "make",
      "args": ["check"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "üóÑÔ∏è Database: Create Migration",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "alembic", "revision", "--autogenerate", "-m", "${input:migrationMessage}"],
      "options": {
        "cwd": "${workspaceFolder}/apps/backend"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ],
  "inputs": [
    {
      // Prompt for backend server port when starting dev server
      // Default: 8000 (FastAPI default port)
      "id": "backendPort",
      "type": "promptString",
      "description": "Backend server port",
      "default": "8000"
    },
    {
      // Prompt for migration message when creating database migration
      // Example: "add user table" or "update shipment schema"
      "id": "migrationMessage",
      "type": "promptString",
      "description": "Migration message",
      "default": "auto migration"
    }
  ]
}
