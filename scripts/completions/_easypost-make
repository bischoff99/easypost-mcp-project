#compdef make
# ZSH completion for EasyPost MCP Makefile

_easypost_make_targets() {
    local -a targets
    targets=(
        'help:Show all available commands'
        'setup:Full environment setup (creates venv + installs dependencies)'
        'dev:Start backend server'
        'test:Run all tests'
        'test COV=1:Run tests with coverage report'
        'lint:Run linters (ruff)'
        'format:Auto-format code (ruff)'
        'check:Run lint + test'
        'build:Build production bundles'
        'prod:Start backend in production mode'
        'clean:Clean build artifacts'
        'qcp:Quick commit + push (use m="message")'
        'd:Alias for dev'
        't:Alias for test'
        'l:Alias for lint'
        'f:Alias for format'
        'c:Alias for check'
        'help-all:Show comprehensive command reference'
    )
    _describe 'make targets' targets
}

_easypost_make_targets "$@"
