# EasyPost MCP Backend - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# EasyPost API Configuration
# ============================================================================
# Get your API key from: https://www.easypost.com/account/api-keys
EASYPOST_API_KEY=your_production_api_key_here
EASYPOST_TEST_KEY=your_test_api_key_here

# ============================================================================
# Database Configuration
# ============================================================================
# Format: postgresql+asyncpg://user:password@host:port/database
# Development: Use local PostgreSQL or leave empty (database features disabled)
# Production: Use production database URL
DATABASE_URL=postgresql+asyncpg://easypost:easypost@localhost:5432/easypost_mcp

# Database Connection Pool Settings (for personal use)
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=5
DATABASE_POOL_RECYCLE=1800
DATABASE_POOL_TIMEOUT=10
DATABASE_COMMAND_TIMEOUT=60
DATABASE_CONNECT_TIMEOUT=10
DATABASE_STATEMENT_TIMEOUT_MS=15000

# ============================================================================
# Server Configuration
# ============================================================================
MCP_HOST=0.0.0.0
MCP_PORT=8000
MCP_LOG_LEVEL=INFO

# ============================================================================
# CORS Configuration
# ============================================================================
# Development: Allow localhost origins
# Production: Restrict to your domain
CORS_ORIGINS=http://localhost:5173,http://localhost:4173
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS

# ============================================================================
# Environment
# ============================================================================
# Options: development, production
ENVIRONMENT=development

# ============================================================================
# Performance Settings (M3 Max: 16 cores)
# ============================================================================
MAX_BULK_CONCURRENCY=16

# ============================================================================
# Debug Settings (Development only)
# ============================================================================
# Set DEBUG=true to enable request ID middleware and detailed logging
DEBUG=false
