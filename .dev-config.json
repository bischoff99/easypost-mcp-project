  "project": {
    "name": "EasyPost MCP",
    "type": "fullstack",
    "description": "Shipping and logistics automation with EasyPost API",
    "scope": "personal-use",
    "constraints": {
      "maxWorkers": 16,
      "maxDbConnections": 20,
      "enterpriseFeatures": false,
      "multiTenancy": false
    },
    "principles": {
      "yagni": true,
      "simplicity": "high",
      "targetAudience": "personal"
    }
  },

  "stack": {
    "backend": {
      "language": "python",
      "framework": "fastapi",
      "version": "3.14",
      "orm": "sqlalchemy",
      "database": "postgresql",
      "features": ["async", "rest-api", "mcp-tools", "orm", "migrations"]
    },
    "frontend": {
      "language": "javascript",
      "framework": "react",
      "buildTool": "vite",
      "stateManagement": "zustand",
      "styling": "tailwindcss",
      "components": "shadcn-ui"
    }
  },

  "paths": {
    "root": "/Users/andrejs/Projects/personal/easypost-mcp-project",
    "backend": "apps/backend/src",
    "frontend": "apps/frontend/src",
    "tests": {
      "backend": "apps/backend/tests",
      "frontend": "apps/frontend/src/tests"
    },
    "components": "apps/frontend/src/components",
    "services": {
      "backend": "apps/backend/src/services",
      "frontend": "apps/frontend/src/services"
    }
  },

  "conventions": {
    "python": {
      "functions": "snake_case",
      "classes": "PascalCase",
      "constants": "UPPER_SNAKE_CASE",
      "files": "snake_case.py"
    },
    "javascript": {
      "functions": "camelCase",
      "components": "PascalCase",
      "constants": "UPPER_SNAKE_CASE",
      "files": "PascalCase.jsx"
    },
    "commits": "conventional",
    "branches": "feature/name, fix/name"
  },

  "testing": {
    "backend": {
      "framework": "pytest",
      "parallel": true,
      "coverage": 36
    },
    "frontend": {
      "framework": "vitest",
      "library": "testing-library/react",
      "parallel": true,
      "coverage": 70
    }
  }
}
