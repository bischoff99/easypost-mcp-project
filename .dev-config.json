  "project": {
    "name": "EasyPost MCP",
    "type": "backend",
    "description": "Backend-only EasyPost shipping integration with MCP server",
    "scope": "personal-use",
    "constraints": {
      "maxWorkers": 16,
      "enterpriseFeatures": false,
      "multiTenancy": false
    },
    "principles": {
      "yagni": true,
      "simplicity": "high",
      "targetAudience": "personal"
    }
  },

  "stack": {
    "backend": {
      "language": "python",
      "framework": "fastapi",
      "version": "3.14",
      "mcp": "fastmcp",
      "features": ["async", "rest-api", "mcp-tools"]
    }
  },

  "paths": {
    "root": "/Users/andrejs/Projects/personal/easypost-mcp-project",
    "backend": "src",
    "tests": {
      "backend": "tests"
    },
    "services": {
      "backend": "src/services"
    }
  },

  "conventions": {
    "python": {
      "functions": "snake_case",
      "classes": "PascalCase",
      "constants": "UPPER_SNAKE_CASE",
      "files": "snake_case.py"
    },
    "javascript": {
      "functions": "camelCase",
      "components": "PascalCase",
      "constants": "UPPER_SNAKE_CASE",
      "files": "PascalCase.jsx"
    },
    "commits": "conventional",
    "branches": "feature/name, fix/name"
  },

  "testing": {
    "backend": {
      "framework": "pytest",
      "parallel": true,
      "coverage": 36
    }
  }
}
