{
  "project": {
    "name": "EasyPost MCP",
    "type": "fullstack",
    "description": "Shipping and logistics automation with EasyPost API"
  },

  "stack": {
    "backend": {
      "language": "python",
      "framework": "fastapi",
      "version": "3.12",
      "orm": "none",
      "features": ["async", "rest-api", "mcp-tools"]
    },
    "frontend": {
      "language": "javascript",
      "framework": "react",
      "buildTool": "vite",
      "stateManagement": "zustand",
      "styling": "tailwindcss",
      "components": "shadcn-ui"
    },
    "detection": {
      "backend": {
        "fastapi": ["from fastapi import", "FastAPI()", "uvicorn.run"],
        "django": ["from django import", "INSTALLED_APPS", "django.contrib"],
        "flask": ["from flask import", "Flask(__name__)"],
        "express": ["const express =", "app.listen", "require('express')"],
        "nest": ["@Module", "@Controller", "NestFactory"],
        "gin": ["gin.Default()", "import \"github.com/gin-gonic/gin\""],
        "actix": ["actix_web::", "HttpServer::new"]
      },
      "frontend": {
        "react": ["import React", "from 'react'", "useState", "useEffect"],
        "vue": ["import { ref", "from 'vue'", "<template>", "defineComponent"],
        "svelte": ["<script>", "$:", "export let"],
        "solid": ["import { createSignal", "from 'solid-js'"],
        "angular": ["@Component", "import { Component", "from '@angular"]
      },
      "testing": {
        "pytest": ["pytest.ini", "import pytest", "conftest.py", "@pytest"],
        "vitest": ["vitest.config", "import { describe", "from 'vitest'"],
        "jest": ["jest.config", "describe(", "test(", "from '@testing-library"],
        "go-test": ["_test.go", "func Test", "t *testing.T"],
        "cargo-test": ["#[test]", "#[cfg(test)]", "cargo test"]
      },
      "build": {
        "vite": ["vite.config", "import { defineConfig"],
        "webpack": ["webpack.config", "module.exports"],
        "rollup": ["rollup.config", "export default"],
        "esbuild": ["esbuild.config", "require('esbuild')"]
      }
    }
  },

  "hardware": {
    "type": "M3 Max",
    "cpuCores": 16,
    "performanceCores": 12,
    "efficiencyCores": 4,
    "ramGB": 128,
    "workers": {
      "python": 32,
      "uvicorn": 33,
      "vitest": 20,
      "pytest": 16
    },
    "optimization": {
      "threadPoolMax": 40,
      "batchSizeOptimal": 150,
      "memoryPerWorker": "4GB",
      "cacheSize": "32GB"
    }
  },

  "paths": {
    "root": "/Users/andrejs/easypost-mcp-project",
    "backend": "backend/src",
    "frontend": "frontend/src",
    "tests": {
      "backend": "backend/tests",
      "frontend": "frontend/src"
    },
    "components": "frontend/src/components",
    "services": {
      "backend": "backend/src/services",
      "frontend": "frontend/src/services"
    }
  },

  "conventions": {
    "python": {
      "functions": "snake_case",
      "classes": "PascalCase",
      "constants": "UPPER_SNAKE_CASE",
      "files": "snake_case.py"
    },
    "javascript": {
      "functions": "camelCase",
      "components": "PascalCase",
      "constants": "UPPER_SNAKE_CASE",
      "files": "PascalCase.jsx"
    },
    "commits": "conventional",
    "branches": "feature/name, fix/name"
  },

  "testing": {
    "backend": {
      "framework": "pytest",
      "parallel": true,
      "coverage": 80,
      "mocking": ["easypost", "external-apis"]
    },
    "frontend": {
      "framework": "vitest",
      "library": "testing-library/react",
      "parallel": true,
      "coverage": 70
    }
  },

  "optimization": {
    "enabled": true,
    "features": {
      "uvloop": true,
      "threadPoolScaling": true,
      "parallelTests": true,
      "codeSplitting": true,
      "lazyLoading": true
    }
  },

  "customization": {
    "primaryDomain": "shipping",
    "mainService": "EasyPostService",
    "apiProvider": "EasyPost",
    "keyFeatures": ["shipment-creation", "tracking", "rate-comparison", "bulk-processing"]
  },

  "workflows": {
    "universal": {
      "morning": {
        "description": "Morning startup routine",
        "commands": "/clean --cache-only && /test --fast",
        "estimated_time": "10s",
        "category": "daily"
      },
      "pre-commit": {
        "description": "Before committing code",
        "commands": "make format && make lint && /test @git-staged",
        "estimated_time": "15s",
        "category": "quality"
      },
      "pre-push": {
        "description": "Before pushing to remote",
        "commands": "/test --coverage && make lint && /fix",
        "estimated_time": "25s",
        "category": "quality"
      },
      "pre-pr": {
        "description": "Before creating pull request",
        "commands": "make format && make lint && /test --coverage && /secure @git-diff",
        "estimated_time": "40s",
        "category": "quality"
      },
      "tdd": {
        "description": "Test-driven development cycle",
        "commands": "/test @selection --watch",
        "estimated_time": "continuous",
        "category": "development"
      },
      "debug": {
        "description": "Debug failing code",
        "commands": "/test || (/explain @errors && /fix @errors)",
        "estimated_time": "20s",
        "category": "development"
      },
      "optimize": {
        "description": "Optimize code performance",
        "commands": "/optimize @selection && /test --benchmark",
        "estimated_time": "30s",
        "category": "performance"
      },
      "ship": {
        "description": "Prepare code for shipping",
        "commands": "/fix && /test --coverage && /optimize && make lint",
        "estimated_time": "45s",
        "category": "release"
      },
      "security": {
        "description": "Security audit",
        "commands": "/secure @file && make lint && /test",
        "estimated_time": "25s",
        "category": "security"
      },
      "full-check": {
        "description": "Complete codebase check",
        "commands": "/clean && make format && make lint && /test --coverage && /optimize",
        "estimated_time": "60s",
        "category": "quality"
      }
    },
    "easypost": {
      "ep-dev": {
        "description": "Start EasyPost development environment",
        "commands": "make dev",
        "estimated_time": "5s",
        "category": "development"
      },
      "ep-test": {
        "description": "Run EasyPost tests (16 workers)",
        "commands": "/ep-test",
        "estimated_time": "6s",
        "category": "testing"
      },
      "ep-test-all": {
        "description": "Run all tests including integration",
        "commands": "/ep-test unit & /ep-test integration",
        "estimated_time": "8s",
        "category": "testing"
      },
      "ep-benchmark": {
        "description": "Performance benchmarks",
        "commands": "/ep-benchmark && make benchmark",
        "estimated_time": "15s",
        "category": "performance"
      },
      "ep-mcp-tool": {
        "description": "Create new MCP tool with EasyPost patterns",
        "commands": "/ep-mcp $1 $2 && /test backend/tests/",
        "estimated_time": "30s",
        "category": "development"
      },
      "ep-bulk-test": {
        "description": "Test bulk operations",
        "commands": "/bulk-create test-data.csv && /track-batch tracking-numbers.txt",
        "estimated_time": "12s",
        "category": "testing"
      },
      "ep-rate-check": {
        "description": "Verify rate accuracy",
        "commands": "/carrier-compare test-shipment && /analytics-deep rates",
        "estimated_time": "18s",
        "category": "testing"
      },
      "ep-debug": {
        "description": "Debug EasyPost API issues",
        "commands": "/ep-lint && /test integration || /explain @errors",
        "estimated_time": "20s",
        "category": "debugging"
      },
      "ep-optimize": {
        "description": "Optimize shipping operations",
        "commands": "/shipping-optimize && /ep-benchmark",
        "estimated_time": "25s",
        "category": "performance"
      },
      "ep-full": {
        "description": "Complete EasyPost workflow test",
        "commands": "/ep-test && /ep-benchmark && /bulk-create test && /track-batch test",
        "estimated_time": "30s",
        "category": "testing"
      },
      "ep-pre-release": {
        "description": "Pre-release quality gate",
        "commands": "make format && make lint && /ep-test --coverage && /ep-benchmark && /secure backend/src/",
        "estimated_time": "60s",
        "category": "release"
      },
      "ep-parallel-test": {
        "description": "All tests in parallel",
        "commands": "/test backend/tests/unit & /test backend/tests/integration & /ep-benchmark",
        "estimated_time": "8s",
        "category": "testing"
      }
    }
  }
}
