{
  "metadata": {
    "version": "1.0.0",
    "lastUpdated": "2025-11-04",
    "maintainer": "andrejs",
    "cursorVersion": "0.40+",
    "schemaVersion": "1.0",
    "changelog": [
      {
        "version": "1.0.0",
        "date": "2025-11-04",
        "changes": [
          "Optimized Cursor IDE setup",
          "Reduced commands from 22 to 8 core",
          "Trimmed workflows from 21 to 10",
          "Added comprehensive documentation"
        ]
      }
    ]
  },

  "project": {
    "name": "EasyPost MCP",
    "type": "fullstack",
    "description": "Shipping and logistics automation with EasyPost API"
  },

  "stack": {
    "backend": {
      "language": "python",
      "framework": "fastapi",
      "version": "3.12",
      "orm": "none",
      "features": ["async", "rest-api", "mcp-tools"]
    },
    "frontend": {
      "language": "javascript",
      "framework": "react",
      "buildTool": "vite",
      "stateManagement": "zustand",
      "styling": "tailwindcss",
      "components": "shadcn-ui"
    },
    "detection": {
      "backend": {
        "fastapi": ["from fastapi import", "FastAPI()", "uvicorn.run"],
        "django": ["from django import", "INSTALLED_APPS", "django.contrib"],
        "flask": ["from flask import", "Flask(__name__)"],
        "express": ["const express =", "app.listen", "require('express')"],
        "nest": ["@Module", "@Controller", "NestFactory"],
        "gin": ["gin.Default()", "import \"github.com/gin-gonic/gin\""],
        "actix": ["actix_web::", "HttpServer::new"]
      },
      "frontend": {
        "react": ["import React", "from 'react'", "useState", "useEffect"],
        "vue": ["import { ref", "from 'vue'", "<template>", "defineComponent"],
        "svelte": ["<script>", "$:", "export let"],
        "solid": ["import { createSignal", "from 'solid-js'"],
        "angular": ["@Component", "import { Component", "from '@angular"]
      },
      "testing": {
        "pytest": ["pytest.ini", "import pytest", "conftest.py", "@pytest"],
        "vitest": ["vitest.config", "import { describe", "from 'vitest'"],
        "jest": ["jest.config", "describe(", "test(", "from '@testing-library"],
        "go-test": ["_test.go", "func Test", "t *testing.T"],
        "cargo-test": ["#[test]", "#[cfg(test)]", "cargo test"]
      },
      "build": {
        "vite": ["vite.config", "import { defineConfig"],
        "webpack": ["webpack.config", "module.exports"],
        "rollup": ["rollup.config", "export default"],
        "esbuild": ["esbuild.config", "require('esbuild')"]
      }
    }
  },

  "hardware": {
    "type": "M3 Max",
    "cpuCores": 16,
    "performanceCores": 12,
    "efficiencyCores": 4,
    "ramGB": 128,
    "workers": {
      "python": 32,
      "uvicorn": 33,
      "vitest": 20,
      "pytest": 16
    },
    "optimization": {
      "threadPoolMax": 40,
      "batchSizeOptimal": 150,
      "memoryPerWorker": "4GB",
      "cacheSize": "32GB"
    }
  },

  "paths": {
    "root": "/Users/andrejs/easypost-mcp-project",
    "backend": "backend/src",
    "frontend": "frontend/src",
    "tests": {
      "backend": "backend/tests",
      "frontend": "frontend/src"
    },
    "components": "frontend/src/components",
    "services": {
      "backend": "backend/src/services",
      "frontend": "frontend/src/services"
    }
  },

  "conventions": {
    "python": {
      "functions": "snake_case",
      "classes": "PascalCase",
      "constants": "UPPER_SNAKE_CASE",
      "files": "snake_case.py"
    },
    "javascript": {
      "functions": "camelCase",
      "components": "PascalCase",
      "constants": "UPPER_SNAKE_CASE",
      "files": "PascalCase.jsx"
    },
    "commits": "conventional",
    "branches": "feature/name, fix/name"
  },

  "testing": {
    "backend": {
      "framework": "pytest",
      "parallel": true,
      "coverage": 80,
      "mocking": ["easypost", "external-apis"]
    },
    "frontend": {
      "framework": "vitest",
      "library": "testing-library/react",
      "parallel": true,
      "coverage": 70
    }
  },

  "optimization": {
    "enabled": true,
    "features": {
      "uvloop": true,
      "threadPoolScaling": true,
      "parallelTests": true,
      "codeSplitting": true,
      "lazyLoading": true
    }
  },

  "customization": {
    "primaryDomain": "shipping",
    "mainService": "EasyPostService",
    "apiProvider": "EasyPost",
    "keyFeatures": ["shipment-creation", "tracking", "rate-comparison", "bulk-processing"]
  },

  "workflows": {
    "universal": {
      "pre-commit": {
        "description": "Before committing code",
        "commands": "make format && make lint && /test",
        "estimated_time": "15s",
        "category": "quality"
      },
      "pre-push": {
        "description": "Before pushing to remote",
        "commands": "/test --coverage && make lint && /fix",
        "estimated_time": "25s",
        "category": "quality"
      },
      "debug": {
        "description": "Debug failing code",
        "commands": "/test || (/explain && /fix)",
        "estimated_time": "20s",
        "category": "development"
      },
      "ship": {
        "description": "Prepare code for shipping",
        "commands": "/fix && /test --coverage && /optimize && make lint",
        "estimated_time": "45s",
        "category": "release"
      }
    },
    "easypost": {
      "ep-morning": {
        "description": "Morning startup and verification",
        "commands": "/ep-dev && /test",
        "estimated_time": "8s",
        "category": "daily"
      },
      "ep-test-all": {
        "description": "Run all tests including integration",
        "commands": "/ep-test unit && /ep-test integration",
        "estimated_time": "12s",
        "category": "testing"
      },
      "ep-quality-gate": {
        "description": "Complete quality check before release",
        "commands": "make format && make lint && /ep-test && /ep-benchmark",
        "estimated_time": "60s",
        "category": "release"
      },
      "ep-parallel-test": {
        "description": "All tests in parallel",
        "commands": "/test backend/tests/unit & /test backend/tests/integration & /ep-benchmark",
        "estimated_time": "8s",
        "category": "testing"
      },
      "ep-feature-dev": {
        "description": "Feature development workflow",
        "commands": "/api /endpoint POST && /test && /optimize",
        "estimated_time": "30s",
        "category": "development"
      },
      "ep-debug-api": {
        "description": "Debug EasyPost API issues",
        "commands": "/ep-test integration || (/explain && /fix)",
        "estimated_time": "25s",
        "category": "debugging"
      }
    }
  }
}
