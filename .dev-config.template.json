{
  "_comment": "Universal Development Configuration Template",
  "_usage": "Copy this to .dev-config.json and customize for your project",
  
  "project": {
    "name": "Your Project Name",
    "type": "fullstack | backend | frontend | mobile | cli",
    "description": "Brief project description"
  },
  
  "stack": {
    "backend": {
      "language": "python | javascript | typescript | go | rust | java",
      "framework": "fastapi | django | express | nestjs | gin | actix | spring",
      "version": "3.12",
      "orm": "none | sqlalchemy | prisma | typeorm | gorm",
      "database": "none | postgresql | mysql | mongodb | redis",
      "features": ["async", "rest-api", "graphql", "websockets", "grpc"]
    },
    "frontend": {
      "language": "javascript | typescript",
      "framework": "react | vue | svelte | solid | angular | nextjs",
      "buildTool": "vite | webpack | parcel | rollup | turbopack",
      "stateManagement": "zustand | redux | pinia | mobx | recoil",
      "styling": "tailwindcss | css-modules | styled-components | emotion",
      "components": "shadcn-ui | material-ui | ant-design | custom"
    },
    "mobile": {
      "framework": "react-native | flutter | swift | kotlin",
      "platforms": ["ios", "android"]
    }
  },
  
  "hardware": {
    "type": "M3 Max | M3 Pro | M2 Max | M1 | Intel",
    "cpuCores": 14,
    "ramGB": 48,
    "workers": {
      "python": 28,
      "node": 14,
      "tests": 16
    },
    "optimization": {
      "enabled": true,
      "uvloop": true,
      "swc": true,
      "esbuild": true
    }
  },
  
  "paths": {
    "root": "/path/to/project",
    "backend": "backend/src | src | server",
    "frontend": "frontend/src | src | client",
    "tests": {
      "backend": "backend/tests | tests",
      "frontend": "frontend/src/__tests__ | src/__tests__"
    },
    "components": "frontend/src/components | src/components",
    "services": {
      "backend": "backend/src/services | src/services",
      "frontend": "frontend/src/services | src/services"
    },
    "models": "backend/src/models | src/models",
    "routes": "backend/src/routes | src/routes",
    "utils": "src/utils"
  },
  
  "conventions": {
    "python": {
      "functions": "snake_case",
      "classes": "PascalCase",
      "constants": "UPPER_SNAKE_CASE",
      "files": "snake_case.py",
      "docstrings": "google | numpy | sphinx"
    },
    "javascript": {
      "functions": "camelCase",
      "components": "PascalCase",
      "constants": "UPPER_SNAKE_CASE",
      "files": "PascalCase.jsx | kebab-case.js",
      "documentation": "jsdoc | tsdoc"
    },
    "commits": "conventional | semantic",
    "branches": "feature/name | feat/name",
    "prNaming": "conventional | descriptive"
  },
  
  "testing": {
    "backend": {
      "framework": "pytest | jest | vitest | go-test | cargo-test",
      "parallel": true,
      "coverage": 80,
      "mocking": ["external-api", "database"],
      "e2e": "playwright | cypress"
    },
    "frontend": {
      "framework": "vitest | jest | testing-library",
      "library": "@testing-library/react | @testing-library/vue",
      "parallel": true,
      "coverage": 70,
      "e2e": "playwright | cypress | puppeteer"
    }
  },
  
  "api": {
    "style": "rest | graphql | grpc | both",
    "documentation": "openapi | graphql-schema | protobuf",
    "versioning": "url | header | none",
    "authentication": "jwt | oauth | api-key | session",
    "rateLimit": true
  },
  
  "database": {
    "primary": "postgresql | mysql | mongodb | sqlite",
    "migrations": "alembic | prisma | typeorm | flyway",
    "seeding": true,
    "connectionPool": {
      "min": 5,
      "max": 20
    }
  },
  
  "deployment": {
    "containerization": "docker | none",
    "orchestration": "kubernetes | docker-compose | none",
    "ci": "github-actions | gitlab-ci | circleci | jenkins",
    "hosting": "aws | gcp | azure | vercel | netlify | self-hosted",
    "environments": ["development", "staging", "production"]
  },
  
  "monitoring": {
    "logging": "structured | simple",
    "logLevel": "info | debug | warning",
    "metrics": "prometheus | datadog | none",
    "tracing": "opentelemetry | jaeger | none",
    "errors": "sentry | rollbar | bugsnag | none"
  },
  
  "security": {
    "inputValidation": true,
    "sqlInjectionProtection": true,
    "xssProtection": true,
    "csrfProtection": true,
    "corsEnabled": true,
    "helmet": true,
    "rateLimiting": true
  },
  
  "customization": {
    "primaryDomain": "e-commerce | saas | analytics | cms | custom",
    "mainService": "YourMainService",
    "apiProvider": "stripe | twilio | sendgrid | custom",
    "keyFeatures": ["feature1", "feature2", "feature3"],
    "businessLogic": "Custom business rules and patterns"
  },
  
  "team": {
    "size": "solo | small | medium | large",
    "workflow": "github-flow | git-flow | trunk-based",
    "codeReview": "required | optional",
    "pairProgramming": false
  }
}
