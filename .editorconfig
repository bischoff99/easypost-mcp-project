# EditorConfig - Consistent coding style across editors
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.py]
indent_size = 4
max_line_length = 100

[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 120

[*.{yml,yaml}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 0

[*.sh]
indent_size = 4

[Makefile]
indent_style = tab

[{package.json,*.yml}]
indent_size = 2

