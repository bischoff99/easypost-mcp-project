# EasyPost MCP Project - Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env to git (it's gitignored)

# =============================================================================
# REQUIRED - EasyPost API Configuration
# =============================================================================
# Get your API key from: https://easypost.com/account/api-keys
# Use test key (EZTK...) for development, production key for production
EASYPOST_API_KEY=your_easypost_api_key_here

# =============================================================================
# DATABASE - PostgreSQL Configuration (Optional)
# =============================================================================
# Database is optional for development/testing
# If not set, database features will be disabled
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/easypost_mcp  # pragma: allowlist secret

# =============================================================================
# SERVER Configuration
# =============================================================================
MCP_HOST=0.0.0.0
MCP_PORT=8000
MCP_LOG_LEVEL=INFO

# =============================================================================
# CORS Configuration
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:4173
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# DATABASE POOL Configuration (M3 Max Optimised)
# =============================================================================
# Connection pool settings for SQLAlchemy
# Formula: (workers Ã— pool_size) + max_overflow <= PostgreSQL max_connections
# Default: 20 base + 30 overflow = 50 total per worker
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_RECYCLE=3600
DATABASE_POOL_TIMEOUT=30
DATABASE_COMMAND_TIMEOUT=60
DATABASE_CONNECT_TIMEOUT=10

# =============================================================================
# ENVIRONMENT
# =============================================================================
# Set to 'development' or 'production'
ENVIRONMENT=development

# =============================================================================
# DOCKER Configuration (for docker-compose)
# =============================================================================
# PostgreSQL password for Docker containers
POSTGRES_PASSWORD=postgres
